<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-[#de2b49] to-[#ff7eb3] text-gray-800 min-h-screen py-10 px-6 font-sans">

    <h1 class="text-4xl font-bold text-center text-black mb-6">URL Shortner</h1>

    <% if (locals.id) { %>
        <p class="text-center text-lg mb-4">
            URL Generated: 
            <a href="http://localhost:4000/url/<%= id %>" target="_blank" class="text-blue-600 hover:underline">
                http://localhost:4000/url/<%= id %>
            </a>
        </p>
    <% } %>

    <form method="post" action="/url" class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow-md flex flex-col gap-4">
        <label class="font-semibold text-black">Enter your original URL</label>
        <input 
            type="text" 
            name="url" 
            placeholder="http://example.com" 
            class="p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
        <button 
            type="submit" 
            class="bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition"
        >
            Generate
        </button> 
    </form>

    <% if (locals.name) { %>
        <p class="text-center text-lg mt-4 text-black">
            Welcome, <strong><%= name %></strong> ðŸ‘‹
        </p>
    <% } %>

    <% if (locals.urls) { %>
        <div class="max-w-5xl mx-auto mt-8 overflow-x-auto">
            <table class="w-full text-left bg-white rounded-lg shadow-md">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="p-3">S. No.</th>
                        <th class="p-3">ShortId</th>
                        <th class="p-3">Redirect</th>
                        <th class="p-3">Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url,index) => { %>
                        <tr class="even:bg-gray-50 hover:bg-blue-50">
                            <td class="p-3"><%= index+1 %></td>
                            <td class="p-3"><%= url.shortId %></td>
                            <td class="p-3"><%= url.redirectURl %></td>
                            <td class="p-3"><%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } %>

</body>
</html>
